.main{:style => "text-align: center"}
  %p See <a href='http://xkcd.com/135/'>http://xkcd.com/135/</a> and <a href='http://news.ycombinator.com/item?id=1389131'>http://news.ycombinator.com/item?id=1389131</a>
  
  %form{:action => "/", :method => "get"}
    %label Your Speed
    %input{:name => "you", :size => 3, :type => "text", :value => params[:you] || "6"}
    &nbsp;&nbsp;&nbsp;
    %label Raptor A's Speed
    %input{:name => "a", :size => 3, :type => "text", :value => params[:a] || "10"}
    &nbsp;&nbsp;&nbsp;
    %label Raptor B's Speed
    %input{:name => "b", :size => 3, :type => "text", :value => params[:b] || "25"}
    &nbsp;&nbsp;&nbsp;
    %label Raptor C's Speed
    %input{:name => "c", :size => 3, :type => "text", :value => params[:c] || "25"}
    &nbsp;&nbsp;&nbsp;
    %input{:type => "submit", :value => "Start Running"}
        
  %br
  %br
  %img{:src => "http://dl.dropbox.com/u/517417/abc.png"}
  %br
  -if !params[:you].nil?
    -g = graphs(params[:you].to_f,params[:a].to_f,params[:b].to_f,params[:c].to_f)
    %img{:src => g[:linear]}
    %img{:src => g[:radial]}
    %img{:src => g[:trace]}

  -else
    -g = graphs(6,10,25,25)
    %img{:src => g[:linear]}
    %img{:src => g[:radial]}
    %img{:src => g[:trace]}
  
  %br
